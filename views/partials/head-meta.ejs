<!-- Basic Meta Tags -->
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title><%= seo.metaTitle || site.title || 'Expand Health AI - Powering the Future of Healthcare' %></title>
<meta name="description" content="<%= seo.metaDescription || site.description || 'Expand Health is every health professional\'s trusted AI co-pilot for smarter, personalised care.' %>">
<% if (seo.metaKeywords && seo.metaKeywords.length > 0) { %>
<meta name="keywords" content="<%= seo.metaKeywords.join(', ') %>">
<% } %>

<!-- Canonical URL -->
<link rel="canonical" href="<%= seo.canonicalUrl || currentUrl %>">

<!-- Robots Meta Tag -->
<% if (seo.robotsSettings) { %>
<meta name="robots" content="<%= seo.robotsSettings.index ? 'index' : 'noindex' %>, <%= seo.robotsSettings.follow ? 'follow' : 'nofollow' %>">
<% } else { %>
<meta name="robots" content="index, follow">
<% } %>

<!-- Open Graph Tags (Facebook, LinkedIn) -->
<meta property="og:type" content="website">
<meta property="og:url" content="<%= currentUrl %>">
<meta property="og:title" content="<%= seo.ogTitle || seo.metaTitle || site.title || 'Expand Health AI - Powering the Future of Healthcare' %>">
<meta property="og:description" content="<%= seo.ogDescription || seo.metaDescription || site.description || 'Expand Health is every health professional\'s trusted AI co-pilot for smarter, personalised care.' %>">
<% if (seo.ogImageUrl) { %>
<meta property="og:image" content="<%= seo.ogImageUrl %>">
<meta property="og:image:alt" content="<%= seo.ogImageAlt || seo.metaTitle || 'Expand Health AI Dashboard' %>">
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="630">
<% } %>
<meta property="og:site_name" content="Expand Health">
<meta property="og:locale" content="en_US">

<!-- Twitter Card Tags -->
<meta name="twitter:card" content="<%= seo.twitterCardType || 'summary_large_image' %>">
<% if (seo.twitterHandle) { %>
<meta name="twitter:site" content="<%= seo.twitterHandle.startsWith('@') ? seo.twitterHandle : '@' + seo.twitterHandle %>">
<meta name="twitter:creator" content="<%= seo.twitterHandle.startsWith('@') ? seo.twitterHandle : '@' + seo.twitterHandle %>">
<% } %>
<meta name="twitter:title" content="<%= seo.ogTitle || seo.metaTitle || site.title || 'Expand Health AI - Powering the Future of Healthcare' %>">
<meta name="twitter:description" content="<%= seo.ogDescription || seo.metaDescription || site.description || 'Expand Health is every health professional\'s trusted AI co-pilot for smarter, personalised care.' %>">
<% if (seo.ogImageUrl) { %>
<meta name="twitter:image" content="<%= seo.ogImageUrl %>">
<meta name="twitter:image:alt" content="<%= seo.ogImageAlt || seo.metaTitle || 'Expand Health AI Dashboard' %>">
<% } %>

<!-- Additional Meta Tags -->
<% if (seo.additionalMetaTags && seo.additionalMetaTags.length > 0) { %>
  <% seo.additionalMetaTags.forEach(tag => { %>
<meta name="<%= tag.name %>" content="<%= tag.content %>">
  <% }); %>
<% } %>

